{
	"name": "@sendra/api",
	"version": "1.0.0",
	"main": "dist/index.js",
	"private": true,
	"scripts": {
		"build": "tsc && npm run openapi:export && npm run openapi:validate",
		"lint": "biome check src",
		"lint:fix": "biome check --write src",
		"lint:fix:unsafe": "biome check --write src --unsafe",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"openapi:export": "tsx scripts/export-openapi.ts",
		"openapi:validate": "npx -p @seriousme/openapi-schema-validator validate-api ../../docs/openapi.json"
	},
	"devDependencies": {
		"@sendra/test": "*",
		"@types/compression": "^1.7.5",
		"@types/jsonwebtoken": "^9.0.6",
		"mock-aws-s3": "^4.0.2",
		"nock": "^14.0.10",
		"ts-node-dev": "^2.0.0",
		"tsx": "^4.19.2",
		"typescript": "^5.5.3"
	},
	"dependencies": {
		"@aws-sdk/client-ses": "^3.957.0",
		"@hono/zod-openapi": "^1.2.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"hono": "^4.10.4",
		"hono-pino": "^0.10.2",
		"jsonwebtoken": "^9.0.2"
	}
}
