{
	"name": "@sendra/cli",
	"version": "1.0.0",
	"description": "Command-line interface for Sendra API",
	"main": "dist/index.js",
	"bin": {
		"sendra": "dist/index.js"
	},
	"private": true,
	"scripts": {
		"build": "tsc",
		"dev": "tsx src/index.ts",
		"lint": "biome check src",
		"lint:fix": "biome check --write src",
		"lint:fix:unsafe": "biome check --write src --unsafe",
		"typecheck": "tsc --noEmit",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"@sendra/shared": "1.0.0",
		"commander": "^14.0.1",
		"hono": "^4.10.1",
		"dotenv": "^16.4.5",
		"chalk": "^4.1.2",
		"ora": "^5.4.1",
		"conf": "^10.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.14.11",
		"tsx": "^4.7.1",
		"typescript": "^5.5.3"
	}
}

