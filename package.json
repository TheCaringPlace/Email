{
  "name": "plunk",
  "version": "1.3.2",
  "private": true,
  "license": "agpl-3.0",
  "engines": {
    "node": ">=18.x",
    "npm": ">=6.14.x"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "rimraf": "^5.0.9"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "build:deps": "npm run build --w=packages/shared && npm run build --w=packages/lib",
    "clean": "npm run clean --workspaces",
    "deploy": "sst deploy",
    "dev": "npm run build:deps && sst dev",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint  --workspaces -- --write",
    "remove": "sst remove",
    "services:down": "docker compose -f docker-compose.dev.yml down",
    "services:up": "docker compose -f docker-compose.dev.yml up -d",
    "sst": "sst",
    "typecheck": "npm run typecheck --workspaces"
  },
  "workspaces": [
    "packages/shared",
    "packages/lib",
    "packages/api",
    "packages/subscribers",
    "packages/dashboard"
  ],
  "dependencies": {
    "sst": "3.17.14"
  },
	"overrides": {
		"uglify-js": "npm:dry-uninstall",
		"zod": "^4.1.11"
	}
}
