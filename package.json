{
  "name": "sendra",
  "version": "0.1.0",
  "private": true,
  "license": "agpl-3.0",
  "engines": {
    "node": ">=20.x",
    "npm": ">=9.8.x"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "rimraf": "^5.0.9"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "build:deps": "npm run build --w=packages/test && npm run build --w=packages/shared && npm run build --w=packages/lib",
    "clean": "npm run clean --workspaces",
    "deploy": "sst deploy",
    "dev": "npm run build:deps && sst dev",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint  --workspaces -- --write",
    "remove": "sst remove",
    "sst": "sst",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces"
  },
	"workspaces": [
    "packages/test",
		"packages/shared",
		"packages/lib",
		"packages/api",
		"packages/subscribers",
		"packages/dashboard",
		"packages/cli"
	],
  "dependencies": {
    "sst": "3.17.14"
  },
  "overrides": {
    "uglify-js": "npm:dry-uninstall",
    "zod": "^4.1.11"
  }
}
