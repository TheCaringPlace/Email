{
  "name": "sendra",
  "version": "0.1.0",
  "private": true,
  "license": "agpl-3.0",
  "engines": {
    "node": ">=20.x",
    "npm": ">=9.8.x"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@playwright/test": "^1.58.0",
    "@pulumi/aws": "^7.16.0",
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^24.10.9",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^27.2.0",
    "rimraf": "^6.1.0",
    "vitest": "^4.0.15"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "build:deps": "npm run build --w=packages/test && npm run build --w=packages/shared && npm run build --w=packages/lib",
    "clean": "npm run clean --workspaces",
    "deploy": "sst deploy",
    "dev": "npm run build:deps && sst dev",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint  --workspaces -- --write",
    "remove": "sst remove",
    "sst": "sst",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces"
  },
  "workspaces": [
    "packages/test",
    "packages/shared",
    "packages/lib",
    "packages/api",
    "packages/subscribers",
    "packages/dashboard",
    "packages/subscription"
  ],
  "dependencies": {
    "sst": "^3.17.24"
  },
  "overrides": {
    "hono": "^4.10.4",
    "zod": "^4.1.11",
    "react": "19.2.3",
		"react-dom": "19.2.3"
  }
}
